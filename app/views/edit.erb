<form action="/articles/<%= @article.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">

<p>Article <input id="title" type="text" name="article[title]" value="<%= @article.title %>"</p>
<p>Content <input id="content" type="text" name="article[content]" value="<%= @article.content %>"</p>
<input type="submit" />
</form>